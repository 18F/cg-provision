{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "PassIAMRoles",
      "Effect": "Allow",
      "Action": [
        "iam:PassRole"
      ],
      "Resource": [
        "arn:${aws_partition}:iam::${account_id}:role/bosh-passed/*"
      ]
    },
    {
      "Sid": "BoshDeployments",
      "Effect": "Allow",
      "Action": [
        "ec2:*",
        "elasticloadbalancing:*"
      ],
      "Resource": ["*"]
    },
    {
      "Sid": "Blobstore",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject"
      ],
      "Resource": [
        "arn:${aws_partition}:s3:::${bucket_name}",
        "arn:${aws_partition}:s3:::${bucket_name}/*"
      ]
    }
  ]
}
